<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.sirdave.sosapp.ui.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/openCamera"
            app:destination="@id/navigation_camera" />

        <action
            android:id="@+id/newContact"
            app:destination="@id/navigation_contact" />

        <action
            android:id="@+id/viewContactList"
            app:destination="@id/navigation_contact_list" />

    </fragment>

    <fragment
        android:id="@+id/navigation_contact_list"
        android:name="com.sirdave.sosapp.ui.contact_list.ContactListFragment"
        android:label="Contact List"
        tools:layout="@layout/contact_list_fragment">

        <action
            android:id="@+id/viewContact"
            app:destination="@id/navigation_contact" />

    </fragment>

    <fragment
        android:id="@+id/navigation_contact"
        android:name="com.sirdave.sosapp.ui.contact.ContactFragment"
        android:label="Contact"
        tools:layout="@layout/contact_fragment" />

    <fragment
        android:id="@+id/navigation_camera"
        android:name="com.sirdave.sosapp.ui.CameraFragment"
        android:label="Camera"
        tools:layout="@layout/fragment_camera" />
</navigation>